@model Models.Utils.PagedResult<Models.Dto.AlunoDto>
@{
    ViewData["Title"] = "Alunos";
}
<div class="row mt-4">
    <div class="col-sm-10 col-md-10 col-lg-10">
        <div class="card">
            <div class="card-body">
                @if (Model.Results.Count > 0)
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Código</th>
                                <th scope="col">Nome</th>
                                <th scope="col">E-Mail</th>
                                <th scope="col">Data Nascimento</th>
                                <th> </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var aluno in Model.Results)
                            {
                                <tr>
                                    <th scope="row">@Html.DisplayFor(a => aluno.Id)</th>
                                    <td>@Html.DisplayFor(a => aluno.Nome)</td>
                                    <td>@Html.DisplayFor(a => aluno.Email)</td>
                                    <td>@Html.DisplayFor(a => aluno.DataNascimento)</td>
                                    <td>
                                        @Html.ActionLink("Alterar", "Alterar", new { id = aluno.Id }, new { @class="card-link" }) |
                                        @Html.ActionLink("Excluir", "Excluir", new { id = aluno.Id }, new { @class="card-link" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
            <div class="card-footer">
                <a class="btn btn-primary mr-2" asp-controller="Aluno" asp-action="Index">
                    Voltar
                </a>
            </div>
        </div>
    </div>
</div>