@model Models.Dto.AlunoDto
@{
    ViewData["Title"] = "Login";
}
<div class="row mt-4">
    <div class="col-sm-6 col-md-6 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="card-icon mdi mdi-cloud-search text-primary icon-md" style="margin-right: 15px"></i>Entrar
                </h6>
            </div>
            <div class="card-body">
                <h5 class="card-title">Seja bem-vindo!</h5>
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="Email">Email</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="Senha">Senha</label>
                        @Html.TextBoxFor(m => m.Senha, new { @class = "form-control", @type = "password" })
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary mr-2">
                            Entrar
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>